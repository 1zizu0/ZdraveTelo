<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/background_zlte">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ľahneme si na brucho, nohy spolu, ruky priamo pod plecami. Odtláčame sa od zeme pričom počas celého pohybu by malo naše telo tvoriť priamku. Od piat po krk by sme nemali mať nič ohnuté. Pri správnom kliku by sme sa mali hrudníkom dotýkať zeme."
        android:id="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/klasicke_kluky"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/buttonPredosly"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/skip_left_button3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/buttonStop"
        android:background="@drawable/stop_button1"
        android:layout_alignTop="@+id/buttonPredosly"
        android:layout_toRightOf="@+id/buttonPredosly"
        android:layout_toEndOf="@+id/buttonPredosly"
        android:layout_alignBottom="@+id/buttonPredosly"
        android:layout_marginLeft="15dp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/buttonPlay"
        android:background="@drawable/play_button2"
        android:layout_alignTop="@+id/buttonStop"
        android:layout_toLeftOf="@+id/buttonDalej"
        android:layout_toStartOf="@+id/buttonDalej"
        android:layout_alignBottom="@+id/buttonStop"
        android:layout_marginRight="15dp"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/buttonDalej"
        android:background="@drawable/skip_right_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/buttonPlay"
        android:layout_alignBottom="@+id/buttonPlay"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00:01:00"
        android:id="@+id/textViewCasovac"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1/5"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/textViewCasovac"
        android:layout_toRightOf="@+id/textViewCasovac"

        android:layout_alignRight="@+id/textView9"
        android:layout_alignEnd="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Časovač"
        android:id="@+id/textView8"
        android:layout_below="@+id/buttonPredosly"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cvik"
        android:id="@+id/textView9"
        android:layout_alignTop="@+id/textView8"
        android:layout_toRightOf="@+id/textViewCasovac"
        android:layout_alignRight="@+id/buttonStop"
        android:layout_alignEnd="@+id/buttonStop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Séria"
        android:id="@+id/textView10"
        android:layout_alignTop="@+id/textView9"
        android:layout_toLeftOf="@+id/textView11"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Opakovanie"
        android:id="@+id/textView11"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1/3"
        android:id="@+id/textViewSerie"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1/30"
        android:id="@+id/textViewOpakovania"
        android:layout_alignTop="@+id/textViewSerie"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />


</RelativeLayout>
